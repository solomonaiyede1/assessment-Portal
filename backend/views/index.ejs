<%- include('partials/header') -%>

  <main class="main">

    <!-- Hero Section -->
    <section id="hero" class="hero section">

      <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row align-items-center content">
          <div class="col-lg-6" data-aos="fade-up" data-aos-delay="200">
            <h2>Birotojob Assessment Portal</h2>
            <p class="lead">Hints to taking the Assessment</p>
            <div class="cta-buttons" data-aos="fade-up" data-aos-delay="300">
              <a href="#portfolio" class="btn btn-primary">Register</a>
              <a href="#contact" class="btn btn-outline">Login</a>
            </div>
            <div class="hero-stats" data-aos="fade-up" data-aos-delay="400">
              <div class="stat-item">
                <span class="stat-number">Course 1</span>
                <span class="stat-label">Data Analysis</span>
              </div>
              <div class="stat-item">
                <span class="stat-number">Course 2</span>
                <span class="stat-label">Software Development</span>
              </div>
              <div class="stat-item">
                <span class="stat-number">Course 3</span>
                <span class="stat-label">ICT Fundamentals</span>
              </div>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="hero-image">
              <img src="assets/img/profile-transparent.webp" alt="Portfolio Hero Image" class="img-fluid" data-aos="zoom-out" data-aos-delay="300">
              <div class="shape-1"></div>
              <div class="shape-2"></div>
            </div>
          </div>
        </div>

      </div>

    </section><!-- /Hero Section -->
  </main>
  <%- include('partials/footer') -%>